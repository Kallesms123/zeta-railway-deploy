{
    "manifest_version": 3,
    "name": "Universal QR Code Capture",
    "version": "1.0",
    "description": "Captures and broadcasts any QR code from any website",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "<all_urls>"
    ],
    "action": {
        "default_title": "QR Code Capture",
        "default_icon": "icon48.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
} 