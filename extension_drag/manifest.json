{
    "manifest_version": 3,
    "name": "Drag QR Code Extractor",
    "version": "1.0",
    "description": "Extract and copy QR code content from web pages",
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "scripting"
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
} 